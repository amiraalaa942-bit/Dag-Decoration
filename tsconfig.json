{
  "compilerOptions": {
    "target": "ES2020",
     "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node","jasmine"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}